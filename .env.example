# Flask Configuration
FLASK_ENV=production
SECRET_KEY=change-this-to-a-secure-random-string
POLLIVU_SALT=change-this-to-a-unique-salt-string

# Database
# Example: postgresql://user:password@localhost:5432/pollivu
DATABASE_URL=sqlite:///polls.db

# Security
# Set to 'true' in production to enforce HTTPS
SESSION_COOKIE_SECURE=true

# AI Providers (Optional - Users can bring their own keys)
# GEMINI_API_KEY=
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=

# Rate Limiting (Optional - defaults to memory://)
# REDIS_URL=redis://localhost:6379/0

# WebSocket CORS (comma-separated origins for production)
# ALLOWED_ORIGINS=https://pollivu.com,https://www.pollivu.com
